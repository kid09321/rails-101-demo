<div class="col-md-12">
  <div class="group">
  <%= link_to("New Group", new_group_path, class: "btn btn-primary pull-right") %>
  </div>
  <table class="table table-hover">
    <thead>
      <tr>
        <td>#</td>
        <td>title</td>
        <td>description</td>
      </tr>
    </thead>
    <tbody>
    <% @group.each do |group| %>
      <tr>
        <td>#</td>
        <td><%= link_to(truncate(group.title, length: 15), group_path(group)) %></td>
        <td><%= group.description %></td>
        <% if group.editable_by?(current_user) %>
       <td> <%= link_to("Edit", edit_group_path(group),class: "btn btn-sm btn-default") %>
            <%= link_to("Delete", group_path(group),class: "btn btn-sm btn-default", method: :delete, data: { confirm: "Are You Sure?"}) %></td>
        <% end %>

      </tr>
    <% end %>
    </tbody>
    </table>
    </div>