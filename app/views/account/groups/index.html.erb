<div class="col-md-12">
<h2 class="text-center">我所加入的討論版</h2>
<table class="table">
<thead>
<tr>
<th>#</th>
<th>標題</th>
<th>描述</th>
<th>文章數量</th>
<th>最後更新</th>
</tr>
</thead>
<tbody>
<% @group.each do |group| %>
<tr>
<td>#</td>
<td><%= link_to(group.title, group_path(@group)) %></td>
<td><%= group.description %></td>
<td><%= group.posts.size %></td>
<td><%= group.updated_at %></td>
</tr>
<% end %>
</tbody>
</table>
</div>